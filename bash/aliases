# eg. alias e=echo

# Bundler Commands
alias bi='bundle install'
alias bx='bundle exec'

# Use Zeus if available otherwise Ruby
function rt {
  if [ -e .zeus.sock ]; then
    bundle exec zeus test $@
  elif grep -q "spring-commands-testunit" Gemfile; then
    bundle exec spring testunit $@
  else
    bundle exec ruby -Itest $@
  fi
}

# Git Commands
alias gs='git status'
alias ga='git add'
alias gc='git commit'
function gp {
  emulate -L ksh
  local git_status="`git status -unormal 2>&1`"
  if ! [[ "$git_status" =~ Not\ a\ git\ repo ]]; then
    if [[ "$git_status" =~ On\ branch\ ([^[:space:]]+) ]]; then
      local branch=${BASH_REMATCH[1]}
      if [[ "$branch" =~ "master" ]]; then
        read -p "push master, Are you sure? " -n 1 -r
        if [[ $REPLY =~ ^[Yy]$ ]]; then
          echo
          git push origin $branch
        else
          echo
          echo 'git push aborted.'
        fi
      # branch is not master
      else
        git push origin $branch $@
      fi
    else
      echo 'not on a branch'
    fi
  else
    echo 'Not a git repo'
  fi
}
